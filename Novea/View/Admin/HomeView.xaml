<Page x:Class="Novea.View.Admin.HomeView"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Novea.View.Admin"
      mc:Ignorable="d" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
      xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"      
      x:Name="Homewd"
      d:DesignHeight="565" d:DesignWidth="820"
      DataContext="{StaticResource HomeVM}"
      Title="HomeView">

    <Border CornerRadius="0 0 40 0">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid  >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="146*"/>
                <RowDefinition Height="337*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Home" 
                                         Foreground="#FFCF99"
                                         Margin="25 0 10 0"
                                         Width="30"
                                         Height="32"
                                         VerticalAlignment="Center"/>
                <TextBlock Text="TRANG CHỦ"
                   Foreground="#fff8f0"
                   FontSize="30"
                   FontWeight="Medium"
                   VerticalAlignment="Center"
                           FontFamily="{StaticResource Custom1}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    VerticalAlignment="Center" 
                    Height="250">

                <Border Width="220"
                    Height="120"
                    CornerRadius="40"
                    Margin="20 0 50 0">

                    <Border.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="#FFA033" Offset="0"/>
                            <GradientStop Color="#fff8f0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0 0 250 120"/>
                    </Border.Clip>

                    <Grid>
                        <materialDesign:PackIcon Kind="Eye" 
                                                 Margin="0,10,10,0" 
                                                 Width="40" 
                                                 Height="40" 
                                                 Foreground="{StaticResource plainTextColor2}"
                                                 HorizontalAlignment="Right" />
                        <StackPanel Margin="5">
                            <TextBlock Text="Total Products"
                                   FontSize="20"
                                   Foreground="{StaticResource plainTextColor2}"
                                   Margin="20 10 10 0"/>

                            <TextBlock Text="123456"
                                       x:Name="totalproducts"
                                   FontSize="35"
                                   Foreground="{StaticResource plainTextColor2}"
                                   HorizontalAlignment="Left"
                                   Margin="20 10 10 0" Width="135">
                                <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Loaded">
                                    <i:InvokeCommandAction Command="{Binding LoadSP}"
                                                       CommandParameter="{Binding ElementName=Homewd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            </TextBlock>
                        </StackPanel>


                    </Grid>
                </Border>

                <Border Width="220"
                    Height="120"
                    CornerRadius="40"
                    Margin="10 0 50 0">

                    <Border.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="#FFA033" Offset="0"/>
                            <GradientStop Color="#fff8f0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0 0 250 120"/>
                    </Border.Clip>

                    <Grid>
                        <materialDesign:PackIcon Kind="CartOutline" 
                                                 Margin="0,10,10,0" 
                                                 Width="40" 
                                                 Height="40" 
                                                 Foreground="{StaticResource plainTextColor2}" HorizontalAlignment="Right" />
                        <StackPanel Margin="5">
                            <TextBlock Text="Total Orders"
                                   FontSize="20"
                                   Foreground="{StaticResource plainTextColor2}"
                                   Margin="20 10 10 0"/>

                            <TextBlock Text="696969"
                                       x:Name="totalorders"
                                   FontSize="35"
                                   Foreground="{StaticResource plainTextColor2}"
                                   HorizontalAlignment="Left"
                                   Margin="20 10 10 0" Width="135">
                                <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Loaded">
                                    <i:InvokeCommandAction Command="{Binding LoadDon}"
                                                       CommandParameter="{Binding ElementName=Homewd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            </TextBlock>
                        </StackPanel>




                    </Grid>
                </Border>

                <Border Width="220"                   
                        Height="120"                   
                        CornerRadius="40"                    
                        Margin="10">

                    <Border.Background>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="#FFA033" Offset="0"/>
                            <GradientStop Color="#fff8f0" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0 0 250 120"/>
                    </Border.Clip>

                    <Grid>
                        <!--<Ellipse Width="150" Height="150" Margin="145,-75,0,45" HorizontalAlignment="Left">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                    <GradientStop Color="red" Offset="0" />
                                    <GradientStop Color="Blue" Offset="1" />
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>-->
                        <materialDesign:PackIcon Kind="Cash"
                                                 Margin="0,10,10,0" 
                                                 Width="40" 
                                                 Height="40" 
                                                 Foreground="{StaticResource plainTextColor2}" 
                                                 HorizontalAlignment="Right" />
                        <StackPanel Margin="5">
                            <TextBlock Text="Total Revenue"
                                   FontSize="20"
                                   Foreground="{StaticResource plainTextColor2}"
                                   Margin="20 10 10 0"/>

                            <TextBlock Text="13579"
                                       x:Name="totalrevenue"
                                   FontSize="35"
                                   Foreground="{StaticResource plainTextColor2}"
                                   HorizontalAlignment="Left"
                                   Margin="20 10 10 0" Width="135">
                                <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Loaded">
                                    <i:InvokeCommandAction Command="{Binding LoadDoanhThu}"
                                                       CommandParameter="{Binding ElementName=Homewd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            </TextBlock>
                        </StackPanel>




                    </Grid>
                </Border>

            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!--Chart-->

                <Border Height="330"                               
                        Width="550"                               
                        Background="#243771"                              
                        CornerRadius="25"                              
                        HorizontalAlignment="Center"                               
                        VerticalAlignment="Top" Margin="0,10,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Direction="-90"
                              RenderingBias="Quality" ShadowDepth="5"/>
                    </Border.Effect>

                    <StackPanel VerticalAlignment="Center">
                        <syncfusion:SfChart Foreground="{StaticResource color1}"
                            Height="250" Width="545" Header="Đồ thị sản phẩm bán ra theo giờ">
                            <syncfusion:SfChart.PrimaryAxis>
                                <syncfusion:CategoryAxis/>
                            </syncfusion:SfChart.PrimaryAxis>

                            <syncfusion:SfChart.SecondaryAxis>
                                <syncfusion:NumericalAxis/>
                            </syncfusion:SfChart.SecondaryAxis>

                            <syncfusion:SfChart.Legend>
                                <syncfusion:ChartLegend/>
                            </syncfusion:SfChart.Legend>

                            <syncfusion:SfChart.Resources>

                                <DataTemplate x:Key="tooltipTemplate">
                                    <Border Background="Green" Margin="-5"
                                            Padding="4" CornerRadius="300">
                                        <StackPanel Orientation="Horizontal" >
                                            <TextBlock Text="{Binding Item.SP}"
                                                       Foreground="White" 
                                                       TextAlignment="Center" FontFamily="{StaticResource Custom1}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>

                                <Style TargetType="Path" x:Key="tooltipStyle">
                                    <Setter Property="Stroke" Value="Pink"/>
                                    <Setter Property="Fill" Value="#FFE5D8"/>
                                </Style>

                            </syncfusion:SfChart.Resources>

                            <syncfusion:SfChart.Behaviors>
                                <syncfusion:ChartTooltipBehavior Style="{StaticResource tooltipStyle}" 
                                 Position="Pointer"/>
                            </syncfusion:SfChart.Behaviors>

                            <syncfusion:ColumnSeries x:Name="Chart" 
                                                     ShowTooltip="True" 
                                                     TooltipTemplate="{StaticResource tooltipTemplate}" 
                                                     Palette="Custom" Label="Sản phẩm"
                                                     ItemsSource="{Binding Data}" 
                                                     XBindingPath="Hour" YBindingPath="SP" 
                                                     EnableAnimation="True" 
                                                     AnimationDuration="00:00:01">

                                <syncfusion:ColumnSeries.ColorModel>
                                    <syncfusion:ChartColorModel>
                                        <syncfusion:ChartColorModel.CustomBrushes>
                                            <SolidColorBrush Color="Red"/>
                                        </syncfusion:ChartColorModel.CustomBrushes>
                                    </syncfusion:ChartColorModel>
                                </syncfusion:ColumnSeries.ColorModel>
                            </syncfusion:ColumnSeries>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Loaded">
                                    <i:InvokeCommandAction Command="{Binding LoadChart}"
                                                       CommandParameter="{Binding ElementName=Homewd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                        </syncfusion:SfChart>
                    </StackPanel>
                </Border>

                <!--Orders-->
                <Border Grid.Column="1" CornerRadius="20" Padding="0 25" Background="#243771" Margin="18,10,18,30">
                    <ListView x:Name="ListViewBill" ItemsSource="{Binding listHD}"      
                              SelectionMode="Single"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"                      
                              ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Height="29"
                                        CornerRadius="15"
                                        Width="587">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="{StaticResource Custom}"                                                              
                                                   Foreground="{StaticResource plainTextColor3}"                                                   
                                                   FontSize="14"                                                    
                                                   HorizontalAlignment="Center"        
                                                   VerticalAlignment="Center"
                                                   Text="{Binding SOHD}" Height="16" Width="38"/>
                                    </StackPanel>

                                </Border>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Margin="0 10 0 0"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding DetailPdCommand}"
                                                       CommandParameter="{Binding ElementName=Managerwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListView>
                </Border>


