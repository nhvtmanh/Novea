<Page x:Class="Novea.View.Host.HomeView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Novea.View.Host"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="820"
      Title="HomeView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="266*"/>
            <RowDefinition Height="247*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="TRANG CHỦ"
                   Foreground="White"
                   FontSize="50"
                   FontWeight="Medium"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0" 
                   Width="293" Height="60"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    VerticalAlignment="Top" 
                    Height="250">

            <Border Width="500"
                    Height="250"
                    Margin="15 0 0 0"
                    CornerRadius="40">

                <Border.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#5bc3ff" Offset="0"/>
                        <GradientStop Color="#3aa0ff" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0 0 500 250"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="hello e iu"
                                   FontSize="40"
                                   Foreground="White"
                                   Margin="20 10 10 0"/>

                        <TextBlock Text="a iu e"
                                   FontSize="28"
                                   Foreground="White"
                                   Margin="20 10 10 0"/>
                    </StackPanel>

                    <Image Width="270"
                           Height="270"
                           Source="/Resources/Images/delivering_man.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom" RenderTransformOrigin="0.325,0.783" Margin="0,0,31,27">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-31.198"/>
                                <TranslateTransform X="57.162" Y="11.346"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </Border>

            <Border Width="250"
                    Height="250"
                    CornerRadius="40"
                    Margin="45 0 0 0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#ffc554" Offset="0"/>
                        <GradientStop Color="#ffb73a" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

            </Border>



        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="e cung iu a"
                   Foreground="White"
                   FontSize="30"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0" 
                   Width="293" Height="50"/>

            <StackPanel Orientation="Horizontal" Height="188">
                <Border Width="170"
                        Height="170"
                        Background="#844eff"
                        CornerRadius="40"
                        Margin="20 0 20 0"/>

                <Border Width="170"
                        Height="170"
                        Background="#4e99ff"
                        CornerRadius="40"
                        Margin="10 0 20 0"/>

                <Border Width="170"
                        Height="170"
                        Background="#4eff91"
                        CornerRadius="40"
                        Margin="10 0 20 0"/>
                
                <Border Width="170"
                        Height="170"
                        Background="#ecff4e"
                        CornerRadius="40"
                        Margin="10 0 20 0"/>
            </StackPanel>
        </StackPanel>
                    


    </Grid>
</Page>
