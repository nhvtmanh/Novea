<Window x:Class="Novea.View.Admin.AddProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:Novea.View.Admin"
        mc:Ignorable="d"
        Title="AddProducts" Height="450" Width="800"
        ResizeMode="CanMinimize"
        x:Name="AddProductwd"
        DataContext="{StaticResource AddProductVM}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Loadwd}"
                                   CommandParameter="{Binding ElementName=AddProductwd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border
        Background="White"
        CornerRadius="15"
        BorderThickness="3"
        >
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0,0.5">
                <GradientStop Color="#FFE5D8" Offset="0"/>
                <GradientStop Color="#FFCAD4" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="135*"/>
                <ColumnDefinition Width="262*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Border Margin="0,0,0,0.333">
                    <Image 
                    x:Name="HinhAnh"
                    Source="{Binding SelectedImage}"
                    Height="450"
                    VerticalAlignment="Center">
                        
                    </Image>
                </Border>
                <Button HorizontalAlignment="Center" 
                        VerticalAlignment="Top"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}"
                        Content="Thêm hình sản phẩm" FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        Width="181" Height="40" Background="#6C63FF" Foreground="White" Margin="0,342,0,0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding AddImage}"
                                                       CommandParameter="{Binding ElementName=HinhAnh}"></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="Transparent">
                    <StackPanel 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                >
                        <materialDesign:PackIcon Kind="WindowMinimize" Foreground="Gray" Height="24" Width="24" Margin="0,0,8,0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding Minimizewd}"
                                                       CommandParameter="{Binding ElementName=AddProductwd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </materialDesign:PackIcon>
                        <materialDesign:PackIcon Kind="CloseThick" Foreground="gray" Height="24" Width="24">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding Closewd}"
                                                       CommandParameter="{Binding ElementName=AddProductwd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </materialDesign:PackIcon>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel 
                                Orientation="Vertical"
                                Margin="10,20,5,10"
                                >
                        <TextBlock
                            Margin="-15,0,0,20"
                            HorizontalAlignment="Center"
                            Text="SẢN PHẨM MỚI"
                            FontSize="24"
                            FontFamily="{StaticResource Custom}"
                            />
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical" Width="249">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ SẢN PHẨM"
                                    FontFamily="{StaticResource Custom}" Width="150" HorizontalAlignment="Right"
                                />
                                <Border
                                CornerRadius="10"
                                BorderThickness="2"
                                BorderBrush="gray"
                                Height="30" HorizontalAlignment="Right"
                                >
                                    <TextBox
                                    x:Name="MaSp"
                                    HorizontalAlignment="Right"
                                    Width="150"
                                    IsEnabled="False"
                                    BorderThickness="0"
                                    FontFamily="{StaticResource Custom}"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM MÃ SẢN PHẨM"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="15,0,0,0"
                                        >
                                <TextBlock
                                    Margin="4,0,0,0"
                                    Text="TÊN SẢN PHẨM"
                                    FontFamily="{StaticResource Custom}" HorizontalAlignment="Left"
                                />
                                <TextBox
                                    Height="30"
                                    x:Name="TenSp"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Left"
                                    Width="150"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM TÊN SẢN PHẨM"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0"
                                    >
                            <StackPanel Orientation="Vertical" Width="249">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="GIÁ SẢN PHẨM"
                                    FontFamily="{StaticResource Custom}" Width="150" HorizontalAlignment="Right"
                                />
                                <TextBox
                                    Height="30"
                                    x:Name="GiaSp"
                                    HorizontalAlignment="Right"
                                    Width="154"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM GIÁ SẢN PHẨM"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="10,0,0,0"
                                        >
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="LOẠI SẢN PHẨM"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border
                                BorderBrush="Gray"
                                BorderThickness="2"
                                Margin="5,0,0,0"
                                Height="30"
                                Width="150"
                                CornerRadius="10"
                                Background="White"
                            >
                                    <ComboBox
                                    x:Name="LoaiSp"
                                    Style="{StaticResource MaterialDesignFilledComboBox}"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="4,-15,0,0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    BorderThickness="0"
                                    materialDesign:HintAssist.FontFamily="{StaticResource Custom}"
                                    materialDesign:HintAssist.Foreground="White"
                                    Background="White"
                                    FontFamily="{StaticResource Custom}"
                                    Height="30"
                                    FontSize="12"
                                    Width="130">
                                        <ComboBoxItem                     
                                            Content="Cà phê"/>
                                        <ComboBoxItem
                                            Content="Trà"/>
                                        <ComboBoxItem                     
                                            Content="Trà sữa"/>
                                        <ComboBoxItem
                                            Content="Đá xay"/>
                                        <ComboBoxItem                     
                                            Content="Sinh tố"/>
                                        <ComboBoxItem
                                            Content="Sữa chua"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0"
                                    >
                            <StackPanel Orientation="Vertical" Width="249">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="ĐƠN VỊ TÍNH"
                                    FontFamily="{StaticResource Custom}" Width="150" HorizontalAlignment="Right"
                                />
                                <TextBox
                                    Height="30"
                                    x:Name="DvSp"
                                    HorizontalAlignment="Right"
                                    Width="154"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM ĐƠN VỊ"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                />
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                                        Margin="10,0,0,0"
                                        >
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="KÍCH CỠ"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border
                                BorderBrush="Gray"
                                BorderThickness="2"
                                Margin="5,0,0,0"
                                Height="30"
                                Width="150"
                                CornerRadius="10"
                                Background="White"
                            >
                                    <ComboBox
                                    x:Name="SizeSp"
                                    Style="{StaticResource MaterialDesignFilledComboBox}"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="4,-15,0,0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    BorderThickness="0"
                                    materialDesign:HintAssist.FontFamily="{StaticResource Custom}"
                                    materialDesign:HintAssist.Foreground="White"
                                    Background="White"
                                    FontFamily="{StaticResource Custom}"
                                    Height="30"
                                    FontSize="12"
                                    Width="130">
                                        <ComboBoxItem Content="S"/>
                                        <ComboBoxItem Content="M"/>
                                        <ComboBoxItem Content="L"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock
                                    Margin="0,10,0,0"
                                    Text="THÔNG TIN SẢN PHẨM"
                                    FontFamily="{StaticResource Custom}" HorizontalAlignment="Center" Width="309"
                                />
                        <TextBox
                                    x:Name="MotaSp"
                                    FontFamily="{StaticResource Custom}"
                                    HorizontalAlignment="Center"
                                    Width="319"
                                    Height="50"
                                    BorderThickness="2"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:HintAssist.Hint="THÊM THÔNG TIN SẢN PHẨM"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"
                                    materialDesign:TextFieldAssist.UnderlineBrush="LightPink"
                                    HorizontalScrollBarVisibility="Auto"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                />
                        <Button Content="THÊM SẢN PHẨM"
                                Margin="0,30,0,0"
                                Width="230"
                                Background="LightPink"
                                BorderThickness="0"
                                x:Name="btnadd"
                                >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding AddProduct}"
                                                       CommandParameter="{Binding ElementName=AddProductwd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
