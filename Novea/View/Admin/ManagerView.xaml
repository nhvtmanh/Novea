                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="15" Margin="72,0,0,0" Width="127"
                                />
                            </Grid>
                            <Grid Grid.Column="3">
                                <TextBlock Foreground="{StaticResource plainTextColor1}"                                    
                                Text="TỔNG TIỀN"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Left"
                                FontSize="15" Margin="105,0,0,0"
                                />
                            </Grid>
                        </Grid>
                    </Border>

                    <ListView x:Name="ListViewBill" ItemsSource="{Binding listHD}"      
                              SelectionMode="Single"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"                      
                              ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                              d:ItemsSource="{d:SampleData ItemCount=5}" Width="602" Height="394">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Height="29"
                                        CornerRadius="15"
                                        Width="587">
                                    <Grid Width="587">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="146*"/>
                                            <ColumnDefinition Width="152*"/>
                                            <ColumnDefinition Width="157*"/>
                                            <ColumnDefinition Width="134*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock FontFamily="{StaticResource Custom}"                                                              
                                                   Foreground="{StaticResource plainTextColor3}"                                                   
                                                   FontSize="14"                                                    
                                                   HorizontalAlignment="Center"        
                                                   VerticalAlignment="Center"
                                                   Text="{Binding SOHD}" Height="16" Width="38"/>

                                        <TextBlock FontFamily="{StaticResource Custom}"                                             
                                                   Foreground="{StaticResource plainTextColor3}"                                                   
                                                   FontSize="14"                                                    
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"                                                   
                                                   Text="{Binding MAKH}" Grid.Column="1" Height="16"/>
                                        <TextBlock FontFamily="{StaticResource Custom}"                                                    
                                                   Foreground="{StaticResource plainTextColor3}"
                                                   FontSize="14"
                                                   Text="{Binding NGMH}" Grid.Column="2" Height="16" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock FontFamily="{StaticResource Custom}"    
                                                   Foreground="{StaticResource plainTextColor3}"
                                                   FontSize="14"
                                                   Text="{Binding TONGTIEN,StringFormat={}{0:####} VNĐ}" Grid.Column="3" Height="16" VerticalAlignment="Center" Margin="19,0,11,0"/>
                                    </Grid>

                                </Border>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Margin="0 10 0 0"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding DetailPdCommand}"
                                                       CommandParameter="{Binding ElementName=Managerwd}"></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    </ListView>
                </StackPanel>
            </Grid>
