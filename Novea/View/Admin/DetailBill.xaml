<Window x:Class="Novea.View.Admin.DetailBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Novea.View.Admin"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        x:Name="DetailBillwd"
        DataContext="{StaticResource DetailBillVM}"
        Height="370" 
        Width="500" WindowStartupLocation="CenterScreen">

    <Border Background="#1e3385" CornerRadius="20">
        <Grid Height="auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="421*"/>
            </Grid.RowDefinitions>

            <Grid>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding MoveWindow}"
                                       CommandParameter="{Binding ElementName=DetailBillwd}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
                <StackPanel Orientation="Horizontal"                                
                        HorizontalAlignment="Right"                                    
                            Margin="0,0,10,0"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="WindowMinimize"
                                             Foreground="{StaticResource plainTextColor3}" 
                                         Height="24" Width="24" Margin="0,0,8,0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Minimizewd}"
                                                       CommandParameter="{Binding ElementName=DetailBillwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                    <materialDesign:PackIcon Kind="CloseThick" Foreground="{StaticResource plainTextColor3}"
                                         Height="24" Width="24">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Closewd}"
                                                       CommandParameter="{Binding ElementName=DetailBillwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                </StackPanel>
            </Grid>
            
            <Border Padding="10"
                CornerRadius="15" Grid.RowSpan="2"
                Grid.Row="0">
                <StackPanel
                            Margin="10"
                            >
                    <TextBlock Foreground="{StaticResource color1}"
                                   FontSize="15"
                                   Margin="0,0,0,5"
                                Text="THÔNG TIN HÓA ĐƠN"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                />
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                            <TextBlock Foreground="{StaticResource color1}"
                                    Margin="8,0,0,0"
                                    Text="MÃ HÓA ĐƠN"
                                    FontFamily="{StaticResource Custom}"/>
                        </StackPanel>
                        <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10" Margin="0 0 0 15">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Foreground="{StaticResource color1}"
                                    x:Name="MaHD"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                <TextBox Foreground="{StaticResource color1}"
                                    x:Name="TenND"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                            <TextBlock Foreground="{StaticResource color1}"
                                    Margin="8,0,0,0"
                                    Text="NGÀY MUA HÀNG"
                                    FontFamily="{StaticResource Custom}"/>

                        </StackPanel>
                        <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10" Margin="0 0 0 15">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Foreground="{StaticResource color1}"
                                    x:Name="NGMH"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>

                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Foreground="{StaticResource color1}"
                                    Margin="8,0,0,5"
                                    Text="ĐƠN GIÁ"
                                    FontFamily="{StaticResource Custom}"
                                />
                        <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10" Margin="0 0 0 15">
                            <TextBox Foreground="{StaticResource color1}"
                                    x:Name="GIA"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                        </Border>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Foreground="{StaticResource color1}"
                                    Margin="8,0,0,5"
                                    Text="MÃ KHÁCH HÀNG"
                                    FontFamily="{StaticResource Custom}"
                                />
                        <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10" Margin="0 0 0 15">
                            <TextBox Foreground="{StaticResource color1}"
                                    x:Name="MAKH"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                        </Border>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Foreground="{StaticResource color1}"
                                    Margin="8,0,0,5"
                                    Text="MÃ CHỦ CỬA HÀNG"
                                    FontFamily="{StaticResource Custom}"
                                />
                        <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10" Margin="0 0 0 15">
                            <TextBox Foreground="{StaticResource color1}"
                                    x:Name="MACCH"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

            </Border>
        </Grid>

    </Border>
</Window>
