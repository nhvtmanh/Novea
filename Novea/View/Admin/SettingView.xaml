<Page x:Class="Novea.View.Admin.SettingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Novea.View.Admin"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      mc:Ignorable="d" 
      d:DesignHeight="565" d:DesignWidth="820"
      Title="SettingView">

    <Border
                    Height="565"
                    Width="820"
                    Background="WhiteSmoke"
                    CornerRadius="0 0 40 0"
                    >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" Margin="28,11,11,0">
                    <Border CornerRadius="50" BorderThickness="1.5" BorderBrush="#EFEFEF">
                        <Ellipse Width="60" Height="60">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/Images/q1.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>

                    <TextBlock Text="CÀI ĐẶT" 
                               Foreground="#6741D9"
                               FontSize="45" 
                               Margin="10 0 0 0"
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Button Padding="20"
                        Width="230"
                        Margin="128,78,0,77"
                        FocusVisualStyle="{x:Null}" 
                        HorizontalAlignment="Left">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="300" />
                            <Setter Property="Foreground" Value="#E2E2E4" />

                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#464F78"/>
                                        <GradientStop Color="#323F6C" Offset="0.9"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5F76F6" />
                                    <Setter Property="Foreground" Value="#ffffff" />
                                </Trigger>

                                <DataTrigger Binding="{Binding ElementName=element,Path=IsActive}" Value="True">
                                    <Setter Property="Background" Value="#5F76F6" />
                                    <Setter Property="Foreground" Value="#ffffff" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <StackPanel VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountCog" 
                                                 Width="50" 
                                                 Height="50"                                    
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"/>
                        <!--<icon:PackIconMaterial Kind="{Binding ElementName=element,Path=Icon}" Width="50" Height="50" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>-->

                        <TextBlock Text="THÔNG TIN CÁ NHÂN" FontSize="18" FontWeight="SemiBold" 
                       TextAlignment="Center" Margin="0 30 0 0"/>
                    </StackPanel>
                </Button>

                <Button Padding="20" 
                        Width="230" 
                        Margin="469,78,0,77"
                        FocusVisualStyle="{x:Null}"
                        HorizontalAlignment="Left">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="300" />
                            <Setter Property="Foreground" Value="#E2E2E4" />

                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#464F78"/>
                                        <GradientStop Color="#323F6C" Offset="0.9"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5F76F6" />
                                    <Setter Property="Foreground" Value="#ffffff" />
                                </Trigger>

                                <DataTrigger Binding="{Binding ElementName=element,Path=IsActive}" Value="True">
                                    <Setter Property="Background" Value="#5F76F6" />
                                    <Setter Property="Foreground" Value="#ffffff" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <StackPanel VerticalAlignment="Center">
                        <!--<icon:PackIconMaterial Kind="{Binding ElementName=element,Path=Icon}" Width="50" Height="50" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>-->
                        <materialDesign:PackIcon Kind="ShopCogOutline" 
                                                 Width="50" 
                                                 Height="50"                                 
                                                 VerticalAlignment="Center" 
                                                 HorizontalAlignment="Center"/>

                        <TextBlock Text="THÔNG TIN CỬA HÀNG" FontSize="18" FontWeight="SemiBold" 
                       TextAlignment="Center" Margin="0 30 0 0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Page>
