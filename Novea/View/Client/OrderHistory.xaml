<Page x:Class="Novea.View.Client.OrderHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:local="clr-namespace:Novea.View.Client"
      mc:Ignorable="d" 
      d:DesignHeight="565" d:DesignWidth="820"
      DataContext="{StaticResource OrderHistoryVM}"
      x:Name="OrderHistorywd">
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadOrderHistoryCommand}"
                                   CommandParameter="{Binding ElementName=OrderHistorywd}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border CornerRadius="0 0 40 0"
            Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="72"/>
                <RowDefinition Height="73"/>
                <RowDefinition/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" Margin="28 11 11 0">
                    <Border>
                        <Image Source="/Resources/Images/orderhistory.png"/>
                    </Border>

                    <TextBlock Text="LỊCH SỬ ĐẶT HÀNG" 
                               Foreground="#fff8f0" 
                               FontSize="35"
                               FontFamily="{StaticResource Custom1}"
                               Margin="10 0 0 0"
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,14,0">
                    <ComboBox Style="{StaticResource MaterialDesignFilledComboBox}"                         
                              Padding="5"
                              Foreground="{StaticResource plainTextColor2}"
                              materialDesign:HintAssist.Hint="Sắp xếp theo"            
                              materialDesign:HintAssist.Foreground="#000"
                              Background="{StaticResource plainTextColor3}"
                              Width="253" Height="46"
                              Margin="30 0 0 0">
                        <ComboBoxItem                     
                            Content="Tăng dần"/>
                        <ComboBoxItem
                            Content="Giảm dần"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal"
                                Margin="124 0 0 0">
                        <materialDesign:ColorZone Mode="Standard"                                               
                                                  Padding="8 4 8 4"                                               
                                                  CornerRadius="2"                                                
                                                  Panel.ZIndex="1"
                                                  Background="{StaticResource plainTextColor3}"
                                                  materialDesign:ElevationAssist.Elevation="Dp2"
                                                  VerticalAlignment="Center">
                            <Grid Width="372">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Button Style="{StaticResource MaterialDesignToolButton}"
                                        Foreground="{StaticResource plainTextColor2}">
                                    <materialDesign:PackIcon Kind="Search"                                                                 
                                                             Opacity=".56" />
                                </Button>
                                <TextBox x:Name="txbSearch"
                                         Grid.Column="1"                                                  
                                         Margin="8 0 0 0"
                                         Foreground="{StaticResource plainTextColor2}"
                                         materialDesign:HintAssist.Hint="Tìm mã"                                                
                                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"                                                 
                                         BorderThickness="0"                                                  
                                         MinWidth="200"                                                  
                                         VerticalAlignment="Center">

                                </TextBox>
                                <Button Style="{StaticResource MaterialDesignToolButton}"                                                    
                                        Grid.Column="2">
                                    <materialDesign:PackIcon Kind="Microphone"                                                     
                                                             Opacity=".56"                                                   
                                                             Margin="8 0 0 0"/>
                                </Button>
                            </Grid>
                        </materialDesign:ColorZone>
                    </StackPanel>

                </StackPanel>
            </Grid>
            
            <Grid Grid.Row="2">
                <StackPanel>
                    <Border Width="600"                            
                        Background="{StaticResource color1}"
                        Height="40"                            
                        CornerRadius="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock Text="SỐ HÓA ĐƠN"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource Custom}"
                                           FontSize="15"
                                           Foreground="{StaticResource plainTextColor2}"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock Text="TỔNG TIỀN"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource Custom}"
                                           FontSize="15"
                                           Foreground="{StaticResource plainTextColor2}"/>
                            </Grid>
                            <Grid Grid.Column="2">
                                <TextBlock Text="NGÀY MUA HÀNG"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{StaticResource Custom}"
                                           FontSize="15"
                                           Foreground="{StaticResource plainTextColor2}"/>
                            </Grid>
                        </Grid>
                    </Border>


                    <ListView x:Name="ListViewHD" ItemsSource="{Binding ListHD}"                    
                          Height="305"                                        
                          Width="650"
                          SelectionMode="Single"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Width="560"                       
                                        Height="40"   
                                        Margin="35 10 0 0"
                                        CornerRadius="15">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="White" Offset="1"/>
                                            <GradientStop Color="Pink" Offset="0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="230"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock 
                                                   Text="{Binding SOHD}"                                             
                                                   HorizontalAlignment="Center"                                            
                                                   VerticalAlignment="Center"                                                                                          
                                                   FontFamily="{StaticResource Custom}"                                            
                                                   FontSize="12"/>
                                        </Grid>

                                        <Grid Grid.Column="1" >
                                            <TextBlock
                                                    Text="{Binding TONGTIEN, StringFormat=\{0:#\,###\} VNĐ}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    MaxWidth="150"
                                                    FontFamily="{StaticResource Custom}"
                                                    FontSize="12"/>
                                        </Grid>


                                        <Grid Grid.Column="2" Margin="50,0,0,0">
                                            <TextBlock
                                                    Text="{Binding NGMH, StringFormat=dd/MM/yyyy hh:mm:tt}"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontFamily="{StaticResource Custom}"
                                                    FontSize="12"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
                
            </Grid>
            <Grid Grid.Row="3">
                <TextBlock Margin="0,22,375,21"
                           Width="350"
                           Height="32"
                           Foreground="SandyBrown"
                           Text="TỔNG TIỀN ĐÃ THANH TOÁN:"
                           FontFamily="{StaticResource Custom}"
                           FontSize="26"/>
                <TextBlock x:Name="txbTONGTIEN"
                           Width="200"
                           Height="32"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="SandyBrown"
                           Text="{Binding TongTien, StringFormat={}{0:#,###} VNĐ}"
                           FontFamily="{StaticResource Custom}"
                           FontSize="26" Margin="400,0,0,0"/>
            </Grid>
        </Grid>
    </Border>
</Page>
