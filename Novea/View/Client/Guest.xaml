<Window x:Class="Novea.View.Guest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Guest" Height="600" Width="1024"
        DataContext="{StaticResource GuestVM}">
    <Border CornerRadius="30" Background="#EFF2F7">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="161"></ColumnDefinition>
                <ColumnDefinition Width="674"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"></RowDefinition>
                    <RowDefinition Height="22*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="1" Grid.Column="0" Background="#623DE0" CornerRadius="0 50 0 30">
                    <DockPanel VerticalAlignment="Top">
                        <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="100" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="20 -30 35 0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Resources/Images/cheems.jpeg"></ImageBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>
                        <TextBlock 
                            Text="nhvtmanh" 
                            Foreground="White" 
                            FontSize="21" 
                            FontWeight="SemiBold" 
                            DockPanel.Dock="Top" 
                            Margin="5" 
                            TextAlignment="Center"/>
                        <TextBlock 
                            Text="Khách hàng" 
                            Foreground="#D0BFFF" 
                            FontSize="14" 
                            FontWeight="SemiBold" 
                            DockPanel.Dock="Top" 
                            TextAlignment="Center"/>
                        <Separator Margin="19" Background="#7E5FDC" DockPanel.Dock="Top" Height="1"/>
                        <StackPanel>
                            <RadioButton
                                x:Name="btnHome"
                                Style="{StaticResource BtnHome}"
                                FontFamily="{StaticResource Custom}"
                                Uid="0" Width="161">
                                    <!--<i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding SwitchTab}"
                                                           CommandParameter="{Binding ElementName=Mainwd}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseMove">
                                        <i:InvokeCommandAction Command="{Binding GetIdTab}"
                                                           CommandParameter="{Binding ElementName=btnHome}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>-->
                            </RadioButton>
                            
                            <RadioButton
                                x:Name="btnCart"
                                Style="{StaticResource BtnCart}"
                                FontFamily="{StaticResource Custom}"
                                Uid="1">
                                    <!--<i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding SwitchTab}"
                                                           CommandParameter="{Binding ElementName=Mainwd}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseMove">
                                        <i:InvokeCommandAction Command="{Binding GetIdTab}"
                                                           CommandParameter="{Binding ElementName=btnOrder}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>-->
                            </RadioButton>

                            <RadioButton
                                x:Name="btnLSDH"
                                Style="{StaticResource BtnLSDH}"
                                FontFamily="{StaticResource Custom}"
                                Uid="2">
                                    <!--<i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding SwitchTab}"
                                                           CommandParameter="{Binding ElementName=Mainwd}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseMove">
                                        <i:InvokeCommandAction Command="{Binding GetIdTab}"
                                                           CommandParameter="{Binding ElementName=btnOrder}"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>-->
                            </RadioButton>
                            
                            <RadioButton
                                x:Name="btnSetting"                                                
                                Style="{StaticResource BtnSetting}"
                                FontFamily="{StaticResource Custom}"
                                Uid="3"
                                > 
                            </RadioButton>

                            <Button 
                                Style="{StaticResource BtnLogOut}"
                                FontFamily="{StaticResource Custom}">   
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>
                <Grid Grid.Row="1" Margin="0,0,0,131"/>
            </Grid>
            <Grid Grid.Column="2">
                <TextBlock Text="NOVEA"                       
                           FontSize="40"                    
                           FontWeight="Medium"                     
                           HorizontalAlignment="Center"                      
                           VerticalAlignment="Top"                      
                           Style="{StaticResource NameApp}"                      
                           Margin="20">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="Green" Offset="0"/>
                            <GradientStop Color="Blue" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</Window>
