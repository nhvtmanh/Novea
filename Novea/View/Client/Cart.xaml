<Page x:Class="Novea.View.Client.Cart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Novea.View.Client"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      mc:Ignorable="d" 
      d:DesignHeight="565" d:DesignWidth="820"
      DataContext="{StaticResource CartVM}"
      x:Name="Cartwd">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCartCommand}"
                                   CommandParameter="{Binding ElementName=Cartwd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border CornerRadius="0 0 40 0"
            Background="Transparent">


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="72"/>
                <RowDefinition/>
                <RowDefinition Height="72"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" Margin="28 11 11 0">
                    <Border>
                        <Image Source="/Resources/Images/cart.png"/>
                    </Border>
                    <TextBlock Text="GIỎ HÀNG" 
                               Foreground="#fff8f0" 
                               FontSize="35"
                               FontFamily="{StaticResource Custom1}"
                               Margin="10 0 0 0"
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel>
                    <Border
                        Width="700"
                        Height="40"
                        CornerRadius="10"                                                
                        Background="{StaticResource color1}"
                        Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Grid.ColumnSpan="2" Margin="80,0,0,0">
                                <TextBlock
                                Text="SẢN PHẨM"
                                                             Foreground="{StaticResource plainTextColor2}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                FontFamily="{StaticResource Custom}"
                                FontSize="15" Margin="0,0,0,6"
                                />
                            </Grid>
                            <Grid Grid.Column="1" Grid.ColumnSpan="2" Margin="15,0,0,0">
                                <TextBlock Foreground="{StaticResource plainTextColor2}"
                                HorizontalAlignment="Left"
                                Text="SIZE"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="15" Margin="0,0,0,0"
                                />
                            </Grid>
                            <Grid Grid.Column="2" Grid.ColumnSpan="2" Margin="20,0,0,0">
                                <TextBlock Foreground="{StaticResource plainTextColor2}"
                                HorizontalAlignment="Left"
                                Text="SỐ LƯỢNG"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="15" Margin="0,0,0,0"
                                />
                            </Grid>
                            <Grid Grid.Column="3" Grid.ColumnSpan="2" Margin="18,0,0,0">
                                <TextBlock Text=" %ĐÁ"                                    
                                           Foreground="{StaticResource plainTextColor2}"                                    
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="15" Margin="0,0,0,0" Width="auto"
                                />
                            </Grid>
                            <Grid Grid.Column="4" Grid.ColumnSpan="2" Margin="5,0,0,0">
                                <TextBlock Text="%ĐƯỜNG"                                    
                                           Foreground="{StaticResource plainTextColor2}"                                    
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                FontSize="15" Margin="0,0,0,0" Width="auto"
                                />
                            </Grid>
                            <Grid Grid.Column="5" Margin="36,0,0,0">
                                <TextBlock Foreground="{StaticResource plainTextColor2}"                                    
                                Text="TRỊ GIÁ"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Left"
                                FontSize="15" Margin="0,0,0,0"
                                />
                            </Grid>
                        </Grid>
                    </Border>

                    <ListView x:Name="ListViewCTHD" ItemsSource="{Binding listCTHD}"
                          Height="350"
                          Width="700"
                          SelectionMode="Single"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Width="680"                       
                                    Height="40"                
                                        Margin="0 10 0 0"
                                    CornerRadius="10">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="White" Offset="1"/>
                                            <GradientStop Color="Pink" Offset="0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Margin="-80,0,0,0">

                                            <TextBlock  HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="{StaticResource Custom}"
                                                        FontSize="12"
                                                        Width="auto"
                                                        Margin="0,0,0,0"
                                                        Text="{Binding SANPHAM.TENSP}"/>
                                        </Grid>
                                        <Grid Grid.Column="1" Margin="10,0,0,0">

                                            <TextBlock  HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="{StaticResource Custom}"
                                                        FontSize="12"
                                                        Width="auto"
                                                        Text="{Binding SANPHAM.SIZE}"/>
                                        </Grid>
                                        <Grid Grid.Column="2" Margin="6,0,0,0">

                                            <TextBlock  HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="{StaticResource Custom}"
                                                        FontSize="12"
                                                        Width="auto"
                                                        Text="{Binding SOLUONG}"/>
                                        </Grid>
                                        <Grid Grid.Column="3" Margin="16,0,0,0">

                                            <TextBlock  HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="{StaticResource Custom}"
                                                        FontSize="12"
                                                        Width="auto"
                                                        Text="{Binding LuongDa}"/>
                                        </Grid>
                                        <Grid Grid.Column="4" Margin="16,0,0,0">

                                            <TextBlock  HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="{StaticResource Custom}"
                                                        FontSize="12"
                                                        Width="auto"
                                                        Text="{Binding LuongDuong}"/>
                                        </Grid>
                                        <Grid Grid.Column="5" >

                                            <TextBlock  HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Width="auto"                             
                                                        FontFamily="{StaticResource Custom}"
                                                        FontSize="12"
                                                        Text="{Binding TRIGIA, StringFormat=\{0:#\,###\} VNĐ}"/>
                                        </Grid>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <!--<i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding DetailPdCommand}"
                                                       CommandParameter="{Binding ElementName=Productwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>-->
                    </ListView>
                </StackPanel>


            </Grid>


            <Grid Grid.Row="2" >

                <TextBlock Margin="35,15,0,0"
                               Width="150"
                               Height="32"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                            Foreground="SandyBrown"
                            Text="TỔNG TIỀN: "
                            FontFamily="{StaticResource Custom}"
                            FontSize="26"/>
                <TextBlock x:Name="txbTONG"
                            Margin="182,15,0,0"
                            Width="180"
                            Height="32"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Foreground="SandyBrown"
                            Text="{Binding TongTien, StringFormat=\{0:#\,###\} VNĐ}"
                            FontFamily="{StaticResource Custom}"
                            FontSize="26"/>
                <Button BorderThickness="1"     
                        BorderBrush="{StaticResource color1}"
                            Content="XÁC NHẬN"                                   
                            FontSize="12"                                    
                            x:Name="acceptbtn"                                   
                            FontFamily="{StaticResource Custom}"                                    
                            Background="Transparent"                                  
                            Width="168"                                   
                            VerticalAlignment="Top"                              
                            HorizontalAlignment="Left"         
                            Margin="400,10,0,0"                                    
                            Foreground="{StaticResource color1}"                                   
                            materialDesign:ButtonAssist.CornerRadius="10" Height="38">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding AcceptCartCommand}"
                                   CommandParameter="{Binding ElementName=Cartwd}"></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <Button BorderThickness="1"     
                        BorderBrush="{StaticResource color1}"
                            Content="HỦY"                                   
                            FontSize="12"                                    
                            x:Name="deletebtn"                                   
                            FontFamily="{StaticResource Custom}"                                    
                            Background="Transparent"                                  
                            Width="168"                                   
                            VerticalAlignment="Top"                              
                            HorizontalAlignment="Left"         
                            Margin="591,10,0,0"                                    
                            Foreground="{StaticResource color1}"                                   
                            materialDesign:ButtonAssist.CornerRadius="10" Height="38">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding DeleteCartCommand}"
                                   CommandParameter="{Binding ElementName=Cartwd}"></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </Grid>

        </Grid>
    </Border>
</Page>
